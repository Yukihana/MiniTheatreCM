<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_MINITHEATRECM_DICTIONARY_SEARCH"
			hint="JSEARCH_FILTER"
			class="js-stools-search-string"
		/>
		<field
			name="state"
			type="status"
			label="JOPTION_SELECT_PUBLISHED"
			statuses="0,1"
			description="JOPTION_SELECT_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<field
			name="author"
			type="author"
			label="COM_MINITHEATRECM_FILTER_AUTHOR"
			description="COM_MINITHEATRECM_FILTER_AUTHOR_DESC"
			multiple="true"
			class="multipleAuthors"
			onchange="this.form.submit();"
			>
			<option value="0">JNONE</option>
		</field>
		<field
			name="itemid"
			type="itemlist"
			label="COM_MINITHEATRECM_FILTER_ITEM"
			description="COM_MINITHEATRECM_FILTER_ITEM_DESC"
			multiple="true"
			class="multipleItems"
			onchange="this.form.submit();"
			>
			<option value="0">JNONE</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_MINITHEATRECM_LIST_FULL_ORDERING"
			description="COM_MINITHEATRECM_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.id ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="a.name ASC">JGLOBAL_TITLE_ASC</option>
			<option value="a.name DESC">JGLOBAL_TITLE_DESC</option>
			<option value="a.state ASC">JSTATUS_ASC</option>
			<option value="a.state DESC">JSTATUS_DESC</option>
			<option value="a.item_id ASC">COM_MINITHEATRECM_ORDERING_ITEM_ASC</option>
			<option value="a.item_id DESC">COM_MINITHEATRECM_ORDERING_ITEM_DSC</option>
			<option value="a.author ASC">JAUTHOR_ASC</option>
			<option value="a.author DESC">JAUTHOR_DESC</option>
			<option value="a.recentedit ASC">COM_MINITHEATRECM_ORDERING_RECENTEDIT_ASC</option>
			<option value="a.recentedit DESC">COM_MINITHEATRECM_ORDERING_RECENTEDIT_DSC</option>
			<option value="a.created ASC">JDATE_ASC</option>
			<option value="a.created DESC">JDATE_DESC</option>
			<option value="a.modified ASC">COM_MINITHEATRECM_ORDERING_MODIFIED_ASC</option>
			<option value="a.modified DESC">COM_MINITHEATRECM_ORDERING_MODIFIED_DSC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			label="COM_MINITHEATRECM_LIST_LIMIT"
			description="COM_MINITHEATRECM_LIST_LIMIT_DESC"
			class="input-mini"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>