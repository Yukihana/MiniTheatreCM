<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field 
			name="id"
			type="hidden"
			/>
		<field
			name="name"
			type="text"
			label="COM_MINITHEATRECM_DICTIONARY_TITLE"
			description="COM_MINITHEATRECM_FIELDDESC_LISTINGTITLE"
			size="64"
			class="inputbox"
			required="true"
			default=""
			/>
		<field
			name="content"
			type="editor"
			label="COM_MINITHEATRECM_DICTIONARY_DESCRIPTION"
			description="COM_MINITHEATRECM_FIELDDESC_LISTINGDESC"
			buttons="true"
			/>
			
		<field 
			name="state" 
			type="list" 
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" 
			class="chzn-color-state"
			filter="intval" 
			size="1" 
			default="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
	</fieldset>
	
	
</form>