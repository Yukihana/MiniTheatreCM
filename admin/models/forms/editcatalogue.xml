<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
	
		<field
			name="id" type="number" readonly="true"
			label="COM_MINITHEATRECM_DICTIONARY_ID"
			description="COM_MINITHEATRECM_FIELD_DESC_ID"
			class="readonly" size="10" default="0" />
		
		<field 
			name="asset_id" type="hidden" filter="unset" />
		
		<field
			name="name" type="text"
			label="COM_MINITHEATRECM_DICTIONARY_TITLE"
			description="COM_MINITHEATRECM_FIELD_DESC_TITLE"
			class="input-xxlarge input-large-text"
			size="64" required="true" default="" />
			
		<field
			name="alias" type="text"
			label="COM_MINITHEATRECM_DICTIONARY_ALIAS"
			description="COM_MINITHEATRECM_FIELD_DESC_ALIAS"
			hint="COM_MINITHEATRECM_FIELD_HINT_ALIAS"
			size="64" default="" />
			
		<field 
			name="state" type="list" 
			label="COM_MINITHEATRECM_DICTIONARY_STATUS"
			description="COM_MINITHEATRECM_FIELD_DESC_STATUS"
			class="chzn-color-state"
			filter="intval" 
			size="1" default="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		
		<field
			name="access" type="usergrouplist"
			label="COM_MINITHEATRECM_DICTIONARY_ACCESS"
			description="COM_MINITHEATRECM_FIELD_DESC_ACCESS" />
			
		<field 
			name="rules" type="rules"
			label="COM_MINITHEATRECM_DICTIONARY_RULES"
			translate_label="false"
			filter="rules" validate="rules"
			component="com_minitheatrecm" section="catalogue" />
			
	</fieldset>
	<fieldset name="data">
	
		<field
			name="content" type="editor" buttons="true"
			label="COM_MINITHEATRECM_DICTIONARY_DESCRIPTION"
			description="COM_MINITHEATRECM_FIELD_DESC_DESCRIPTION" />
			
	</fieldset>
	<fieldset name="associations">
	
		<field
			name="franchise_id" type="franchiselist"
			label="COM_MINITHEATRECM_DICTIONARY_FRANCHISE"
			description="COM_MINITHEATRECM_FIELD_DESC_FRANCHISE" >
			<option value="0">COM_MINITHEATRECM_DICTIONARY_NONE</option>
		</field>
			
		<field
			name="ctype_id" type="contenttypelist"
			label="COM_MINITHEATRECM_DICTIONARY_CONTENTTYPE"
			description="COM_MINITHEATRECM_FIELD_DESC_CONTENTTYPE" >
			<option value="0">COM_MINITHEATRECM_DICTIONARY_NONE</option>
		</field>
			
		<field
			name="genres" type="genrelist" multiple="true"
			label="COM_MINITHEATRECM_DICTIONARY_GENRES"
			description="COM_MINITHEATRECM_FIELD_DESC_GENRES" />
			
	</fieldset>
	<fieldset name="media">
	
	</fieldset>
	<fieldset name="websites">
	
		<field type="note"
			label="COM_MINITHEATRECM_DICTIONARY_LINKS"
			description="COM_MINITHEATRECM_FIELD_DESC_WEBLINKS" />
	
		<field
			name="offweb" type="url" maxlength="255"
			label="COM_MINITHEATRECM_DICTIONARY_OFFICIALWEBSITE"
			description="COM_MINITHEATRECM_FIELD_DESC_OFFWEB"
			hint="COM_MINITHEATRECM_HINT_URL" />
		
		<field
			name="malurl" type="url" maxlength="255"
			label="COM_MINITHEATRECM_DICTIONARY_MAL"
			description="COM_MINITHEATRECM_FIELD_DESC_MALURL"
			hint="COM_MINITHEATRECM_HINT_URL" />
			
		<field
			name="anidburl" type="url" maxlength="255"
			label="COM_MINITHEATRECM_DICTIONARY_ANIDB"
			description="COM_MINITHEATRECM_FIELD_DESC_ANIDBURL"
			hint="COM_MINITHEATRECM_HINT_URL" />
		
		<field
			name="rellinks" type="textarea"
			label="COM_MINITHEATRECM_DICTIONARY_RELATEDLINKS"
			description="COM_MINITHEATRECM_FIELD_DESC_RELLINKS"
			hint="COM_MINITHEATRECM_HINT_URLS" />
			
			<field type="spacer" hr="true"/>
	</fieldset>
	<fieldset name="videos">
		
		<field type="note"
			label="COM_MINITHEATRECM_DICTIONARY_VIDEOLINKS"
			description="COM_MINITHEATRECM_FIELD_DESC_VIDLINKS" />
			
		<field
			name="trailers" type="textarea"
			label="COM_MINITHEATRECM_DICTIONARY_TRAILERS"
			description="COM_MINITHEATRECM_FIELD_DESC_TRAILERLINKS"
			hint="COM_MINITHEATRECM_HINT_URLS" />
			
		<field
			name="vidlinks" type="textarea"
			label="COM_MINITHEATRECM_DICTIONARY_RELATEDVIDEOS"
			description="COM_MINITHEATRECM_FIELD_DESC_RELVIDS"
			hint="COM_MINITHEATRECM_HINT_URLS" />
			
	</fieldset>
	<fieldset name="metadata">
	

	
	</fieldset>
	<fieldset name="metatools">
	
		<field type="note"
			label="COM_MINITHEATRECM_DICTIONARY_TOOLS"
			description="COM_MINITHEATRECM_FIELD_DESC_FETCHEXT" />
			
		<field name="_getdp" type="list" default="1"
			label="COM_MINITHEATRECM_DICTIONARY_COVERIMAGE"
			description="COM_MINITHEATRECM_FIELD_DESC_FETCHMODE"
			class="btn-group btn-group-yesno" >
			<option value="0">COM_MINITHEATRECM_DICTIONARY_NONE</option>
			<option value="1">COM_MINITHEATRECM_DICTIONARY_FILL</option>
			<option value="2">COM_MINITHEATRECM_DICTIONARY_OVERWRITE</option>
		</field>
		
		<field name="_getdesc" type="list" default="1"
			label="COM_MINITHEATRECM_DICTIONARY_DESCRIPTION"
			description="COM_MINITHEATRECM_FIELD_DESC_FETCHMODE"
			class="btn-group btn-group-yesno" >
			<option value="0">COM_MINITHEATRECM_DICTIONARY_NONE</option>
			<option value="1">COM_MINITHEATRECM_DICTIONARY_FILL</option>
			<option value="2">COM_MINITHEATRECM_DICTIONARY_OVERWRITE</option>
		</field>
		
		<field name="_getmeta" type="list" default="1"
			label="COM_MINITHEATRECM_DICTIONARY_METADATA"
			description="COM_MINITHEATRECM_FIELD_DESC_FETCHMODE"
			class="btn-group btn-group-yesno" >
			<option value="0">COM_MINITHEATRECM_DICTIONARY_NONE</option>
			<option value="1">COM_MINITHEATRECM_DICTIONARY_FILL</option>
			<option value="2">COM_MINITHEATRECM_DICTIONARY_OVERWRITE</option>
		</field>
		
		<field name="_dbsource" type="list" default="0"
			label="COM_MINITHEATRECM_DICTIONARY_SOURCE"
			description="COM_MINITHEATRECM_FIELD_DESC_EXTDBSRC" >
			<option value="0">COM_MINITHEATRECM_DICTIONARY_ANIDB</option>
			<option value="1">COM_MINITHEATRECM_DICTIONARY_MAL</option>
		</field>
		
	</fieldset>
	<fieldset name="publishing">
	
		<field
			name="publish_up" type="calendar" showtime="true"
			label="COM_MINITHEATRECM_DICTIONARY_PUBLISHUP"
			description="COM_MINITHEATRECM_FIELD_DESC_PUBLISHUP"
			timeformat="24" translateformat="true" filter="user_utc"
			todaybutton="true" weeknumbers="true" filltable="true" />
			
		<field
			name="publish_down" type="calendar" showtime="true"
			label="COM_MINITHEATRECM_DICTIONARY_PUBLISHDOWN"
			description="COM_MINITHEATRECM_FIELD_DESC_PUBLISHDOWN"
			timeformat="24" translateformat="true" filter="user_utc"
			todaybutton="true" weeknumbers="true" filltable="true" />
			
	</fieldset>
	<fieldset name="super">
	
		<field
			name="author" type="author"
			label="COM_MINITHEATRECM_DICTIONARY_AUTHOR"
			description="COM_MINITHEATRECM_FIELD_DESC_AUTHOR"
			checksuperusergroup="1" >
			<option value="0">COM_MINITHEATRECM_DICTIONARY_NONE</option>
		</field>
		
		<field
			name="recentedit" type="author"
			label="COM_MINITHEATRECM_DICTIONARY_RECENTEDIT"
			description="COM_MINITHEATRECM_FIELD_DESC_RECENTEDIT"
			checksuperusergroup="1" >
			<option value="0">COM_MINITHEATRECM_DICTIONARY_NONE</option>
		</field>
		
		<field
			name="created" type="calendar" showtime="true"
			label="COM_MINITHEATRECM_DICTIONARY_CREATED"
			description="COM_MINITHEATRECM_FIELD_DESC_CREATED"
			timeformat="24" translateformat="true" filter="user_utc"
			todaybutton="true" weeknumbers="true" filltable="true"
			checksuperusergroup="1" />
			
		<field
			name="modified" type="calendar" showtime="true"
			label="COM_MINITHEATRECM_DICTIONARY_MODIFIED"
			description="COM_MINITHEATRECM_FIELD_DESC_MODIFIED"
			timeformat="24" translateformat="true" filter="user_utc"
			todaybutton="true" weeknumbers="true" filltable="true"
			checksuperusergroup="1" />
			
	</fieldset>
</form>