<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.7.0" method="upgrade">

    <name>COM_MINITHEATRECM</name>
	
	<!--Optional Content-->
	<creationDate>24 August 2017</creationDate>
	<author>Yuki (RiA)</author>
	<authorEmail>lilyflowerangel@gmail.com</authorEmail>
	<authorUrl>http://fb.me/LilyflowerAngel</authorUrl>
	<copyright>CherrySoft-X 2017, MiniTheatre 2017</copyright>
	<license>GNU/GPL</license>
	<version>0.0.11</version>
	<description>COM_MINITHEATRECM_DESCRIPTION</description>
	
	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	
	<!--Runs on Update-->
	<update>
        <schemas>
		    <schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	
	<!--Site Base Folder Manifest-->
	<files folder="site">
	    <filename>index.html</filename>
		<filename>minitheatrecm.php</filename>
		<filename>controller.php</filename>
		
		<folder>views</folder>
		<folder>models</folder>
	</files>
	
	<!--Site Language Configuration-->
	<languages folder="site/language">
		<language tag="en-GB">en-GB/en-GB.com_minitheatrecm.ini</language>
	</languages>
	
	<!--Media Configuration-->
	<media destination="com_minitheatrecm" folder="media">
		<filename>index.html</filename>
		<folder>images</folder>
	</media>
	
	<administration>
	    <!--Admin Menu Section-->
	    <menu link="option=com_minitheatrecm">COM_MINITHEATRECM_MENU</menu>
		
		<!--Backend Base Folder Manifest-->
		<files folder="admin">
		    <filename>index.html</filename>
			<filename>minitheatrecm.php</filename>
			<filename>controller.php</filename>
			
			<folder>controllers</folder>			
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>helpers</folder>
			
		</files>
		
		<!--Admin Language Configuration-->
		<languages folder="admin/language">
			<language tag="en-GB">en-GB/en-GB.com_minitheatrecm.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_minitheatrecm.sys.ini</language>
		</languages>
		
	</administration>
	
	<!--Tutorial Manifest
	Tutorial: Backend Actions
	Notes: field-type (also same.php in fields folder)
	Notes: Avoid underscores in Class Names, only use in translations/db-table. Not even the table class.
	Notes: Nomenclature is strict. reference strings(variables) for classnames should match the classname.
	Notes: Classname Capitalization doesn't matter against variables. (usually)
	Notes: MVC are a set by naming. One of each (if)needed.
	Notes: Backend naming convention( plural for list page, singular for edit page ).
	
	Issue #1
		Failed: Menu Settings only show an integer "1" in the form field.
		Fix: Do not use underscores in classnames when referenced by a variable.
	Issue #2
		Failed: Backend controller targetting to and from.
		Fix: MVC are a set. One of each when needed, and of the same name.
			Convention: List page named in plural. Edit page named the same in singular.
	-->
	
</extension>